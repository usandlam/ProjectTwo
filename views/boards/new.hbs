<h2>Create a Board</h2>
<div class="row">
  <div class="col-md-6">
    <form action="/movies/create" method="post" enctype="multipart/form-data"> {{!-- !!! --}}
      {{#if flash}}
        <div class="alert alert-danger" role="alert">
            <p>{{flash}}</p>
        </div>
      {{/if}}    
      <div class="form-group">
        <label>Name:
          <input type="text" name="name" class="form-control" {{#if attempt.name}} value="{{attempt.name}}" {{/if}}/>
        </label>
      </div>
       <div class="form-group">
        <label>Project Type:
          <select id="tag" name="tag">
              {{#each tags}}
              <option value="{{_id}}">{{label}}</option>
              {{/each}}
          </select>
        </label>
      </div>
      <div class="form-group">
        <label>Description:
          <textarea name="description" cols="30" rows="4" class="form-control"> 
              {{#if attempt.description}} {{attempt.description}} {{/if}}
          </textarea>
        </label>
      </div>

      <div class="form-group">
        <label>URL:
          <input type="text" name="url" class="form-control" />
        </label>
      </div>      
 
      <div class="form-group">
        <label>Top Board Image (SVG):
          <textarea name="topSVG" cols="10" rows="4" class="form-control">
            {{#if attempt.topSVG}} {{attempt.topSVG}} {{/if}}
          </textarea>
          {{!-- <input type="file" name="movie-cover-image" class="form-control-file" /> --}}
        </label>
      </div>
      <div class="form-group">
        <label>Bottom Board Image (SVG):
          <textarea name="bottomSVG" cols="10" rows="4" class="form-control"> 
              {{#if attempt.bottomSVG}} {{attempt.bottomSVG}} {{/if}}
          </textarea>
          {{!-- <input type="file" name="movie-cover-image" class="form-control-file" /> --}}
        </label>        
      </div>

      <div class="form-group">
        <label>Secondary Tags: (separated by commas)
            <textarea name="altTag" cols="25" rows="1" class="form-control" {{#if attempt.altTag}} value="{{attempt.altTag}}" {{/if}}> </textarea>
        </label>
      </div>
 

      <button type="submit" class="btn btn-primary">Create</button>
    </form>
  </div>
</div>