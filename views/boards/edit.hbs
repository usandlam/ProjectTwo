<h2>Update a Board</h2>
<div class="row">
  <div class="col-md-6">
      {{!-- enctype="multipart/form-data" --}}
    <form action="/board/{{boardInfo.id}}/edit" method="POST" > 
      {{#if flash}}
        <div class="alert alert-danger" role="alert">
            <p>{{flash}}</p>
        </div>
      {{/if}}    
      <div class="form-group form-floating">
          <input type="text" name="name" class="form-control" id="input-name" placeholder="Name" {{#if boardInfo.name}} value="{{boardInfo.name}}" {{/if}}/>
          <label for="input-name">Name</label>    
      </div>        
       <div class="form-group form-floating">
          <select class="form-select" id="tag" name="tag">
              {{#each tags}}
              <option value="{{_id}}" {{#if selected}}selected{{/if}}>{{label}}</option>
              {{/each}}
          </select>
        <label for="tag">Project Type:</label>
      </div>      
      <div class="form-group form-floating">
          <input type="text" name="author" class="form-control" id="input-author"{{#if boardInfo.author}} value="{{boardInfo.author}}" {{/if}}/>
          <label for="input-author">Author</label>
      </div>             
      <div class="form-group form-floating">
        <textarea name="description" id="input-description" class="form-control h-100" cols="30" rows="4" class="form-control" placeholder="Description">{{#if boardInfo.description}}{{boardInfo.description}}{{/if}}</textarea>
        <label id="input-description">Description: </label>
      </div>
      <div class="form-group form-floating">
          <input type="text" name="url" class="form-control" id="input-url" placeholder="URL"{{#if boardInfo.url}} value="{{boardInfo.url}}" {{/if}}/>
          <label for="input-url">URL:</label>
      </div>              
      <div class="form-group-inline">
        {{!-- <label>Top Board Image (SVG): --}}
          {{!-- <pre><textarea name="topSVG" cols="10" rows="4" class="form-control">{{#if boardInfo.topSVG}}{{boardInfo.topSVG}}{{/if}}</textarea></pre> --}}
          {{!-- <input type="file" name="movie-cover-image" class="form-control-file" /> --}}
        </label>
      {{!-- </div> --}}
      {{!-- <div class="form-group"> --}}
        {{!-- <label>Bottom Board Image (SVG): --}}
          {{!-- <textarea name="bottomSVG" cols="10" rows="4" class="form-control">{{#if boardInfo.bottomSVG}}{{boardInfo.bottomSVG}}{{/if}}</textarea> --}}
          {{!-- <input type="file" name="movie-cover-image" class="form-control-file" /> --}}
        </label>        
      </div>
      <div class="form-group form-floating">
            <textarea name="altTags" cols="25" rows="1" class="form-control" id="input-tags" placeholder=" ">{{#if boardInfo.altTag}}{{boardInfo.altTag}}{{/if}}</textarea>
            <label for="input-tags">Secondary Tags: (separated by commas)        </label>
      </div>
      <div class="form-group">
        <label>Project Includes:</label>
      </div>  
      <div class="form-group">
        {{#each features}}
            <div class="form-check form-check-inline">
            <input class="form-check-input" name="features" type="checkbox" value="{{label}}" id="check-{{@key}}" {{checked}}>
            <label class="form-check-label" for="check-{{@key}}">{{label}}</label>
            </div>      
        {{/each}}
            <div class="form-check form-check-inline">
            <input class="form-check-input" name="features" type="checkbox" id="inlineCheckbox3" value="disabled" disabled>
            <label class="form-check-label" for="inlineCheckbox3">Free Parts (disabled)</label>
            </div>
        
      </div>
      <button type="submit" class="btn btn-primary">Update</button>
    </form>
  </div>
</div>