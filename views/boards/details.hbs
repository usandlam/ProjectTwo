<div class="col">
{{#with boardInfo}}
<div class="row">
    <div class="col">
        <img src="/image/{{id}}/top.svg" class="detail-pg-img" alt=""> 
    </div>
    <div class="col">
        <img src="/image/{{id}}/bottom.svg" class="detail-pg-img" alt="">
    </div>

<h5>{{name}}</h5>

<p>{{description}}</p>

<p>{{altTag}}</p>

  <div class="card-body">
    <h5 class="card-title">{{name}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{description}}</h6>
    <p class="card-text">{{tag.label}}</p>
    </div>
  
  <ul class="list-group list-group-flush">
      {{altTag}}

      {{features}}

      {{#each features}}
        {{features}}
      {{/each}}
    {{#each altTag}}
        <li class="list-group-item">
        <div class="d-flex w-100 justify-content-between">
            {{altTag}}
    <span class="badge "><small>text</small></span>

        </div>
        <small class="text-muted">More Text</small>            
        
        </li> 
    {{/each}}      
  </ul>
    <div class="card-body">
    <form action="/board/{{_id}}/delete" method="POST">
       <button type="submit" class="btn btn-danger">Delete</button>
         <a href="/board/{{_id}}/edit" class="btn btn-info">Edit</a>
    </form>
    </div>
</div>
{{/with}}
</div>